<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @user.all_friends.count %> 位關聯朋友</h3>
        </div>
        <div class="panel-body">
          <% @user.all_friends.each do |friend| %>
            <div class="my-friend">
              <div>
                <%= link_to user_path(friend) do %>
                    <%= image_tag 'http://via.placeholder.com/100x100', class: "img-responsive img-rounded" %>
                    <h5><%= friend.name %></h5>
              <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



