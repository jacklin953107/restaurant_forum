<% if user != current_user  %>
    <% if current_user.friend?(user) %>
        <%= link_to 'Unfriend', unfriend_user_path(user), method: :post, class: "btn btn-link" %>
    <% else %>
        <%= link_to 'Friend', friend_user_path(user), method: :post, class: "btn btn-default" %>
    <% end %>
<% end %>
