<div class="nav-center">
  <ul class="nav nav-pills">
    <li role="presentation" class="active"><%= link_to '全部餐廳', root_path %></li>
    <% @categories.each do |category|  %>
      <li role="presentation"><%= link_to category.name, category_path(category) %></li>
    <% end %>
  </ul>
</div>
<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <% if restaurant.image?  %>
              <%= image_tag restaurant.image, width:'300px', class: "img-responsive center-block" %>
          <% else %>
              <div style="width:300px;height:180px">
              <span class="glyphicon glyphicon-picture"></span>
              </div>
          <% end  %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p><%= restaurant.name %></p>
            <p><%= truncate(restaurant.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
  </div>
</div>