<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <%= @restaurant.category.name %>
    </div>

    <div class="col-md-4">
      <% if @restaurant.image?  %>
      <%= image_tag @restaurant.image, width:'300px', class: "img-responsive center-block" %>
      <% else %>
      <span class="glyphicon glyphicon-picture"></span>
      <% end  %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>

    <div class="clearfix"></div>

    <hr>

    <div class="container">
      <div class="row">
        <%= form_for [@restaurant, @comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :content, placeholder: "留個顏吧", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit class: "btn btn-primary" %>
            <%= f.button "Cancle", type: :reset, class: "btn btn-default" %>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
</div>